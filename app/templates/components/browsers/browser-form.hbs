<form class="form">
  <div class="form-row">
    <label for="Name">Name</label>
    {{input type="text" id="name" value=browser.name.en}}
  </div>

  <div class="form-row">
    <label for="Slug">Slug</label>
    {{input type="text" id="slug" value=browser.slug}}
  </div>

  <div class="form-row">
    <label for="note">Note</label>
    {{input type="text" id="note" value=browser.note.en}}
  </div>

  <div class="form-actions">
    <button {{action "saveBrowser"}}>Save</button>
  </div>
</form>