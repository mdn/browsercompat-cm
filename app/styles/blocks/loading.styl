/*
Loading indicator
====================================================================== */

#loading {
  opacity: 0;
  visibility: hidden;
  position: absolute;
  z-index: 999;
  top:0;
  right:0;
  bottom:0;
  left:0;
  padding-top: 45vh;
  background: rgba(0,0,0,0.5);
  color: #fff;
  font-size: 50px;
  text-align: center;
  transition: visibility 0.5s, opacity 0.5s;
}

.loading #loading {
  opacity: 1;
  visibility: visible;
}
