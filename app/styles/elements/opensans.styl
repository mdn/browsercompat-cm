@require '../includes/variables';

/*
Light
====================================================================== */

@font-face {
    font-family: 'Open Sans';
    src: url($path-to-fonts + 'OpenSans-Light-webfont.eot');
    src: url($path-to-fonts + 'OpenSans-Light-webfont.eot?#iefix') format('embedded-opentype'), url($path-to-fonts + 'OpenSans-Light-webfont.woff2') format('woff2'), url($path-to-fonts + 'OpenSans-Light-webfont.woff') format('woff'), url($path-to-fonts + 'OpenSans-Light-webfont.ttf') format('truetype');
    font-weight: $font-weight-light;
    font-style: normal;
}

@font-face {
    font-family: 'Open Sans';
    src: url($path-to-fonts + 'OpenSans-LightItalic-webfont.eot');
    src: url($path-to-fonts + 'OpenSans-LightItalic-webfont.eot?#iefix') format('embedded-opentype'), url($path-to-fonts + 'OpenSans-LightItalic-webfont.woff2') format('woff2'), url($path-to-fonts + 'OpenSans-LightItalic-webfont.woff') format('woff'), url($path-to-fonts + 'OpenSans-LightItalic-webfont.ttf') format('truetype');
    font-weight: $font-weight-light;
    font-style: italic;
}


